---
import BaseLayout from '../../layouts/BaseLayout.astro'
import { getCollection } from 'astro:content'
import { siteConfig } from '../../siteConfig'

const projects = (await getCollection('projects')).sort(
  (a, b) => new Date(b.data.endDate).getTime() - new Date(a.data.endDate).getTime()
)
---

<BaseLayout
  title="Portfolio"
  description="Front-end projects and selected work"
>
  <!-- Hero Section with dramatic typography -->
  <section class="relative pt-24 pb-16 sm:pt-32 sm:pb-20">
    <!-- Gradient Background -->
    <div class="fixed inset-0 -z-10">
      <div class="absolute inset-0 bg-gradient-to-br from-slate-950 via-slate-900 to-indigo-950"></div>
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,rgba(99,102,241,0.15),transparent_50%)]"></div>
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_bottom_right,rgba(139,92,246,0.1),transparent_50%)]"></div>
    </div>

    <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl">
        <h1 class="text-5xl font-semibold tracking-tighter text-white sm:text-6xl lg:text-7xl">
          Portfolio
        </h1>
        <p class="mt-6 text-xl text-slate-400 leading-relaxed max-w-2xl">
          Selected client work with a focus on front-end architecture, accessibility, and performance
        </p>
      </div>
    </div>
  </section>

  <!-- Projects Grid - Bento-style layout -->
  <section class="relative pb-24 sm:pb-32">
    <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class={`grid gap-6 ${projects.length > 2 ? 'md:grid-cols-2 lg:grid-cols-3' : 'md:grid-cols-2'}`}>
        {projects.map((entry, index) => (
          <a
            href={`/portfolio/${entry.slug}`}
            class={`group relative rounded-2xl border border-slate-800 bg-slate-900/50 p-8 backdrop-blur-sm transition-all duration-500 hover:border-accent-500/30 hover:bg-slate-800/50 hover:shadow-2xl hover:shadow-accent-500/10 ${index === 0 && projects.length > 2 ? 'md:col-span-2 lg:col-span-1' : ''}`}
          >
            <div class="flex items-start justify-between gap-4">
              <div>
                <h2 class="text-xl font-semibold text-white transition-colors group-hover:text-accent-300">
                  {entry.data.title}
                </h2>
                <p class="mt-2 text-sm text-slate-400">{entry.data.client}</p>
              </div>
              {entry.data.nda ? (
                <span class="rounded-full bg-accent-500/10 px-3 py-1 text-xs font-semibold text-accent-300 border border-accent-500/20">
                  NDA-safe
                </span>
              ) : null}
            </div>

            <p class="mt-6 text-slate-300 leading-relaxed">{entry.data.summary}</p>

            <div class="mt-6 flex flex-wrap gap-2">
              {entry.data.stack.slice(0, 4).map((t) => (
                <span class="rounded-full bg-slate-800/80 px-3 py-1 text-xs text-slate-300 border border-slate-700/50">
                  {t}
                </span>
              ))}
            </div>

            <div class="mt-8 flex items-center text-sm font-semibold text-accent-400 group-hover:text-accent-300 transition-colors">
              View project
              <svg class="ml-2 h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
