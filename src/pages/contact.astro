---
import { Image } from 'astro:assets'
import BaseLayout from '../layouts/BaseLayout.astro'
import BgImg from '../images/bg.png'
import { siteConfig } from '../siteConfig'
---

<BaseLayout title="Contact" description="Contact Connection Works">
  <div class="relative min-h-[calc(100vh-200px)]">
    <div class="absolute inset-0">
      <Image
        class="h-full w-full object-cover object-top"
        src={BgImg}
        alt=""
      />
      <div aria-hidden="true" class="absolute inset-0 bg-black/70"></div>
    </div>

    <section class="relative mx-auto max-w-6xl px-4 py-10 sm:px-6">
      <div class="max-w-3xl">
      <h1 class="text-3xl font-semibold tracking-tight text-white sm:text-4xl">
        Contact
      </h1>

      <p class="mt-4 text-lg text-slate-300">
        If you have a Front-End contract or product build that needs calm delivery and high standards, I'd love to hear from you.
      </p>

      <div class="mt-10 rounded-xl border border-white/10 bg-white/5 p-6">
        <h2 class="text-base font-semibold text-white">Email</h2>
        <p class="mt-2 text-sm text-slate-300">
          <a class="font-semibold text-brown-300 hover:text-brown-200" href={`mailto:${siteConfig.email}`}>
            {siteConfig.email}
          </a>
        </p>

        <div class="mt-6 grid gap-4 sm:grid-cols-2">
          <a
            class="rounded-lg bg-white/10 px-4 py-3 text-sm font-semibold text-white transition hover:bg-white/15 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brown-200"
            href={siteConfig.linkedInUrl}
            target="_blank"
            rel="noopener noreferrer"
            aria-label="LinkedIn (opens in a new tab)"
          >
            LinkedIn
          </a>
          <a
            class="rounded-lg bg-white/10 px-4 py-3 text-sm font-semibold text-white transition hover:bg-white/15 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brown-200"
            href={siteConfig.githubUrl}
            target="_blank"
            rel="noopener noreferrer"
            aria-label="GitHub (opens in a new tab)"
          >
            GitHub
          </a>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
