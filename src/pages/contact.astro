---
export const prerender = false

import BaseLayout from '../layouts/BaseLayout.astro'
import { siteConfig, getAvailabilityConfig } from '../siteConfig'
import ExternalLinkIcon from '../components/ExternalLinkIcon.astro'
import CurrentTime from '@components/CurrentTime.astro'

// Dynamic availability calculation - synced with homepage
const now = new Date()
const currentYear = now.getFullYear()
const currentMonth = now.getMonth()
const currentQuarter = Math.floor(currentMonth / 3) + 1

// Use central availability status and config from siteConfig
const availabilityStatus = siteConfig.availabilityStatus
const availabilityConfig = getAvailabilityConfig(currentQuarter, currentYear)
const currentStatus = availabilityConfig[availabilityStatus]
---

<BaseLayout title="Contact" description="Contact Connection Works — Available for front-end contracts and product builds">
  <!-- Hero Section -->
  <section class="relative pt-24 pb-16 sm:pt-32 sm:pb-20">
    <!-- Gradient Background -->
    <div class="fixed inset-0 -z-10">
      <div class="absolute inset-0 bg-gradient-to-br from-slate-950 via-slate-900 to-indigo-950"></div>
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,rgba(99,102,241,0.15),transparent_50%)]"></div>
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_bottom_right,rgba(139,92,246,0.1),transparent_50%)]"></div>
    </div>

    <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="lg:grid lg:grid-cols-2 lg:gap-12 items-start">
        {/* Left column - Text content */}
        <div>
          <h1 class="text-5xl font-semibold tracking-tighter text-white sm:text-6xl lg:text-7xl">
            Let's work together
          </h1>

          <p class="mt-8 text-xl text-slate-400 leading-relaxed max-w-2xl">
            If you have a Front-End contract or product build that needs calm delivery and high standards, I'd love to hear from you.
          </p>

          <div class="mt-8 flex flex-wrap items-center gap-4 text-sm text-slate-500">
            <div class="flex items-center gap-2">
              <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <span>{siteConfig.location}</span>
            </div>
            <span class="text-slate-700">•</span>
            <div class="flex items-center gap-2">
              <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <time id="uk-time" datetime=""><CurrentTime /></time>
            </div>
            <span class="text-slate-700">•</span>
            <span>Usually responds within 24 hours</span>
          </div>
        </div>

        {/* Right column - Availability Card */}
        <div class="mt-12 lg:mt-0">
          <div class="rounded-2xl border border-slate-800 bg-slate-900/50 p-8 backdrop-blur-sm">
            {/* Status indicator */}
            <div class="flex items-center gap-3 mb-6">
              <span class="relative flex h-3 w-3">
                <span class={`animate-ping absolute inline-flex h-full w-full rounded-full ${currentStatus.indicator} opacity-75`}></span>
                <span class={`relative inline-flex rounded-full h-3 w-3 ${currentStatus.indicator}`}></span>
              </span>
              <span class="text-sm font-medium text-slate-300">{currentStatus.badge}</span>
            </div>

            <p class="text-slate-400 mb-6">{currentStatus.description}</p>

            {/* Primary CTA */}
            <a
              href={`mailto:${siteConfig.email}`}
              class="group flex items-center justify-center gap-2 w-full rounded-xl bg-accent-600 px-6 py-4 text-base font-semibold text-white transition hover:bg-accent-500 hover:shadow-lg hover:shadow-accent-500/25"
            >
              {currentStatus.cta}
              <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>

            <p class="mt-4 text-xs text-center text-slate-500">{currentStatus.subtext}</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Cards -->
  <section class="relative pb-24 sm:pb-32">
    <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="grid gap-6 lg:grid-cols-2 max-w-7xl">
        <!-- Email Card -->
        <div class="group rounded-2xl border border-slate-800 bg-slate-900/50 p-8 backdrop-blur-sm transition-all duration-500 hover:border-accent-500/30 hover:bg-slate-800/50">
          <div class="flex items-center gap-4 mb-6">
            <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-gradient-to-br from-accent-500/20 to-violet-500/20">
              <svg class="h-6 w-6 text-accent-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <h2 class="text-xl font-semibold text-white">Email</h2>
          </div>
          <p class="text-slate-400 mb-4">Best for project inquiries and detailed discussions</p>
          <a 
            class="group/link inline-flex items-center gap-2 text-lg font-semibold text-accent-400 hover:text-accent-300 transition-colors" 
            href={`mailto:${siteConfig.email}`}
          >
            {siteConfig.email}
            <svg class="w-4 h-4 transition-transform group-hover/link:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>

        <!-- Social Links Card -->
        <div class="group rounded-2xl border border-slate-800 bg-slate-900/50 p-8 backdrop-blur-sm transition-all duration-500 hover:border-accent-500/30 hover:bg-slate-800/50">
          <div class="flex items-center gap-4 mb-6">
            <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-gradient-to-br from-accent-500/20 to-violet-500/20">
              <svg class="h-6 w-6 text-accent-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <h2 class="text-xl font-semibold text-white">Connect</h2>
          </div>
          <p class="text-slate-400 mb-4">Find me on professional networks</p>
          <div class="flex flex-wrap gap-3">
            <a
              class="inline-flex items-center gap-2 rounded-lg bg-accent-600/10 border border-accent-500/20 px-4 py-2 text-sm font-semibold text-accent-300 transition hover:bg-accent-500/20"
              href={siteConfig.linkedInUrl}
              target="_blank"
              rel="noopener noreferrer"
            >
              LinkedIn
              <ExternalLinkIcon class="h-4 w-4" />
            </a>
            <a
              class="inline-flex items-center gap-2 rounded-lg bg-slate-800 px-4 py-2 text-sm font-semibold text-slate-300 border border-slate-700 transition hover:bg-slate-700"
              href={siteConfig.githubUrl}
              target="_blank"
              rel="noopener noreferrer"
            >
              GitHub
              <ExternalLinkIcon class="h-4 w-4" />
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  function updateUKTime() {
    const now = new Date()
    const ukTime = now.toLocaleTimeString('en-GB', {
      timeZone: 'Europe/London',
      hour: '2-digit',
      minute: '2-digit'
    })
    const ukFormatter = new Intl.DateTimeFormat('en-GB', {
      timeZone: 'Europe/London',
      timeZoneName: 'short'
    })
    const ukTimeString = ukFormatter.format(now)
    const timeZoneName = ukTimeString.includes('BST') ? 'BST' : 'GMT'
    
    const timeEl = document.getElementById('uk-time')
    if (timeEl) {
      timeEl.textContent = `${ukTime} ${timeZoneName}`
      timeEl.setAttribute('datetime', now.toISOString())
    }
  }
  
  updateUKTime()
  setInterval(updateUKTime, 6000)
</script>
