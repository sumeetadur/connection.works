---
import { siteConfig } from '../siteConfig'

const pathname = Astro.url.pathname
const items = [
  { href: '/', label: 'Home' },
  { href: '/portfolio', label: 'Portfolio' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
]
---

<nav aria-label="Primary" class="w-full border-b border-slate-800/50">
  <div class="mx-auto flex max-w-7xl items-center justify-between px-4 py-4 sm:px-6">
    <a href="/" class="inline-flex items-center gap-2 font-semibold tracking-tight text-white">
      <span class="sr-only">{siteConfig.siteName}</span>
      <span aria-hidden="true" class="text-lg">{siteConfig.siteName}</span>
    </a>

    <div class="flex items-center gap-1">
      {items.map((item) => {
        const isActive =
          pathname === item.href ||
          (item.href !== '/' && pathname.startsWith(`${item.href}/`))
        return (
          <a
            href={item.href}
            aria-current={isActive ? 'page' : undefined}
            class={`rounded-md px-3 py-2 text-sm font-medium transition focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent-500 ${
              isActive
                ? 'bg-accent-500/10 text-accent-300'
                : 'text-slate-400 hover:bg-slate-800/50 hover:text-slate-200'
            }`}
          >
            {item.label}
          </a>
        )
      })}

      <a
        href="/contact"
        class="ml-2 hidden rounded-md bg-accent-600 px-3 py-2 text-sm font-semibold text-white transition hover:bg-accent-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent-500 sm:inline-flex"
      >
        Hire me
      </a>
    </div>
  </div>
</nav>
