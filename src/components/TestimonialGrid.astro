---
const { testimonials } = Astro.props as {
  testimonials: Array<{
    quote: string
    name: string
    role?: string
    company?: string
  }>
}
---

<section aria-label="Testimonials" class="w-full">
  <h2 class="text-base font-semibold text-white">What clients value</h2>
  <div class="mt-6 grid gap-6 grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {testimonials.map((t) => (
      <figure class="rounded-xl border border-white/10 bg-white/5 p-8 flex flex-col">
        <blockquote class="text-sm leading-relaxed text-slate-200 whitespace-pre-line flex-1">"{t.quote}"</blockquote>
        <figcaption class="mt-6 text-sm text-slate-300">
          <span class="font-semibold text-white">{t.name}</span>
          {t.role || t.company ? (
            <span class="text-slate-400">
              {' '}
              â€” {[t.role, t.company].filter(Boolean).join(', ')}
            </span>
          ) : null}
        </figcaption>
      </figure>
    ))}
  </div>
</section>

