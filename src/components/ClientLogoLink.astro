---
import { Image } from 'astro:assets'
import ExternalLinkIcon from './ExternalLinkIcon.astro'

const { href, name, src } = Astro.props
---

<a
  class="group relative col-span-1 flex cursor-pointer justify-center bg-slate-800 p-4 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent-500 rounded-lg border border-slate-700/50 transition-colors hover:border-accent-500/30"
  target="_blank"
  rel="noopener noreferrer"
  aria-label={`${name} (opens in a new tab)`}
  {href}
>
  <Image class="max-h-7 max-w-full object-contain" {src} alt={name} />
  <div
    class="absolute inset-0 hidden bg-accent-500/10 group-hover:block group-focus-visible:block rounded-lg"
  >
  </div>
  <ExternalLinkIcon class="absolute top-1 right-1 hidden h-5 w-5 text-accent-400 group-hover:block group-focus-visible:block" />
</a>
